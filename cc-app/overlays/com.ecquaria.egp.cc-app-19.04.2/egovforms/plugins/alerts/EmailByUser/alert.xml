<Alert>
	<Require>BaseAlert</Require>
	<Type>EmailByUser</Type>
	<Label>Email By User</Label>
	<Class>sop.sla.alert.EmailByUser</Class>
	<Properties>
		<Entry name="emailSubject">
			<String>Notification for task [{0}]</String>
		</Entry>
		<Entry name="emailContent">
			<String>The task [{0}] is about to overdue.\n{1}</String>
		</Entry>
	</Properties>
</Alert>