<?xml version="1.0" encoding="UTF-8"?>
<userprofile>
	<base id="profile" label="Profile" description="Personal Profiles" tablename="" iconclass="fa fa-user">
		<field label="IC Number" name="icNumber" column="field1" type="label" />
		<field label="Name" name="displayName" column="field2" type="label" />
		<field label="Date of Birth" name="dateOfBirth" column="field6" type="label" pattern="dd/MM/yyyy" />
		<field label="Gender" name="gender" column="field7" type="label" />
	</base>
	<external tablename="">
		<section id="language" label="Language" description="Language Setting" iconclass="fa fa-language">
			<field label="Language" name="language" column="field12" type="option" lookup="Language" required="true" />
		</section>
		<section id="social-media" label="Social Media" description="Social Media Profiles" iconclass="fa fa-comments">
			<field label="Facebook Username" name="facebookName" column="field1" type="string" required="true" hint="Facebook"/>
			<field label="Twitter Username" name="twitterName" column="field2" type="string" hint="Twitter"/>
			<field label="Google+ Username" name="googleName" column="field3" type="string" hint="Google+"/>
			<field label="Instagram Username" name="instagramName" column="field4" type="string" hint="Instagram"/>
		</section>
		<section id="address" label="Address" description="Correspondence Address" iconclass="fa fa-location-arrow">
			<field label="Address" name="address" column="field5" type="string"  hint="Your Local Address"/>
			<field label="Postal Code" name="postalCode" column="field6" type="string"  hint="Your Local Postal code"/>
			<field label="Country" name="country1" column="field7" type="option" lookup="Country"  hint=""/>
		</section>
		<section id="contact" label="Contact" description="Contact Details" iconclass="fa fa-phone">
			<field label="Mobile No." name="mobileNo" column="field8" type="string" hint="Your Mobile No."/>
			<!--<field label="Home No." name="homeNo" column="field9" type="string" hint="Your Home Phone No."/>-->
			<!--<field label="Office No." name="officeNo" column="field10" type="string" hint="Your Office Phone No."/>-->
			<field label="Other Contact No." name="otherContactNo" column="field10" type="string" hint="Other Contact No."/>
			<field label="E-mail" name="email" column="field11" type="string" validateRegex="[\w\.\-]+@([\w\-]+\.)+[\w\-]+" hint="Your E-mail"/>
		</section>
		<section id="documents" label="Documents" description="Personal Documents" iconclass="fa fa-file-text-o">
			<field label="User Photo" name="userPhoto" column="field24" type="blob"/>
			<field label="Identity Card" name="identityCard" column="field21" type="blob"/>
			<field label="Birth Certificate" name="birthCertificate" column="field22" type="blob"/>
			<field label="Driver's Licence" name="driverLicence" column="field23" type="blob"/>
			<field label="User Picture" name="userPicture" column="field30" type="blob"/>
		</section>
	</external>
</userprofile>