<StageType>
	<Type>sopform.stages.standard.VerificationStage</Type>
	<Require>sopform.stages.base.BaseStage</Require>
	
	<Name>Verification</Name>
	<Description>Send submission for verification and comments by officers</Description>
	<Icon>images/verification.png</Icon>
	<Javascript>javascripts/VerificationStage.js</Javascript>
	<Process>SOPFORMS:VerificationStage</Process>
	<Properties>
		<Property>
			<Name>stageType</Name>
			<Label>Stage Type</Label>
			<Value>Verification</Value>
			<Type>label</Type>
		</Property>
		<Property>
			<Name>stageName</Name>
			<Label>Stage Name</Label>
			<Type>text</Type>
		</Property>
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>		
		<Property>
			<Name>taskAssignment</Name>
			<Label>Task Assignment</Label>
			<Type>taskAssignment</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>allowComment</Name>
			<Label>Allows Comment</Label>
			<Type>checkbox</Type>
			<Default>checked</Default>
		</Property>
		<Property>
			<Name>allowForwarding</Name>
			<Label>Allows Forwarding</Label>
			<Type>checkbox</Type>
			<Default>checked</Default>
		</Property>
		<Property>
			<Name>customizedAckPage</Name>
			<Label>Customized Acknowledgement Page</Label>
			<Type>customizedAckPage</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>customizedButtons</Name>
			<Label>Customized Buttons</Label>
			<Type>customizedButtons</Type>
			<Special>true</Special>
		</Property>
		
		<!-- On Page Load / Submit section -->
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>useOnPageLoad</Name>
			<Label>On Page Load</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>processSelectionOPL</Name>
			<Label>Process Selection</Label>
			<Type>processSelectionOPL</Type>
			<Special>true</Special>
		</Property>
		
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>useOnPageSubmit</Name>
			<Label>On Page Submit</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>processSelectionOPS</Name>
			<Label>Process Selection</Label>
			<Type>processSelectionOPS</Type>
			<Special>true</Special>
		</Property>
		<!-- On Page Load / Submit section (end) -->
		
		
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>useAlternateStage</Name>
			<Label>Alternate Verification Stage</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>processSelectionAltStage</Name>
			<Label>Process Selection</Label>
			<Type>processSelectionAltStage</Type>
			<Special>true</Special>
		</Property>
		
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>notifyTaskViaEmail</Name>
			<Label>Notify Task via Email</Label>
			<Type>checkbox</Type>
		</Property>
	</Properties>
</StageType>