<StageType>
	<Type>sopform.stages.standard.BranchColumn</Type>
	<Require>sopform.stages.base.BaseStage</Require>
	<Require>sopform.stages.standard.Branch</Require>
	
	<Name>Branch Column</Name>
	<Javascript>javascripts/BranchColumn.js</Javascript>
	<Html>dialog.html</Html>
	<Instantiable>false</Instantiable>
	<Draggable>false</Draggable>
	<Properties>
		<Property>
			<Name>stageName</Name>
			<Label>Stage Name</Label>
			<Type>text</Type>
		</Property>
		<Property>
			<Name>branchCondition</Name>
			<Label>Branch Condition</Label>
			<Type>label</Type>
		</Property>
		<Property>
			<Name>selectField</Name>
			<Label>Select Field</Label>
			<Type>label</Type>
		</Property>
		<Property>
			<Name>compare</Name>
			<Label>Comparison Operator</Label>
			<Type>dropdown</Type>
		</Property>
		<Property>
			<Name>resultValue</Name>
			<Label>Result Value</Label>
			<Type>dropdown</Type>
		</Property>
		<Property>
			<Name>fieldValueDropDown</Name>
			<Label>Field Value</Label>
			<Type>dropdown</Type>
		</Property>
		<Property>
			<Name>fieldValueText</Name>
			<Label>Field Value</Label>
			<Type>text</Type>
		</Property>
		<Property>
			<Name>isDefault</Name>
			<Label>Default branch if ALL conditions results to false</Label>
			<Type>checkbox</Type>
		</Property>
	</Properties>
</StageType>