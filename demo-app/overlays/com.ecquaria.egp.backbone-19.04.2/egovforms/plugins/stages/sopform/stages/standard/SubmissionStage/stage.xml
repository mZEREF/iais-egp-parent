<StageType>
	<Type>sopform.stages.standard.SubmissionStage</Type>
	<Require>sopform.stages.base.BaseStage</Require>
	
	<Name>Submission Stage</Name>
	<Description>Description of Submission Stage</Description>
	<Icon>images/submission.png</Icon>
	<Javascript>javascripts/SubmissionStage.js</Javascript>
	<Process>SOPFORMS:SubmissionStage</Process>
	<Instantiable>false</Instantiable>
	<Properties>
		<Property>
			<Name>stageType</Name>
			<Label>Stage Type</Label>
			<Value>Submission</Value>
			<Type>label</Type>
		</Property>
		<Property>
			<Name>stageName</Name>
			<Label>Stage Name</Label>
			<Type>text</Type>
		</Property>
		<Property>
			<Name>allowSaveDraft</Name>
			<Label>Allows Save Draft</Label>
			<Type>checkbox</Type>
			<Default>checked</Default>
		</Property>
		<Property>
			<Name>customizedAckPage</Name>
			<Label>Customized Acknowledgement Page</Label>
			<Type>customizedAckPage</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>customizedButtons</Name>
			<Label>Customized Buttons</Label>
			<Type>customizedButtons</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>specifyApprover</Name>
			<Label>Specify Approver</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>approverRoleOPL</Name>
			<Label>Role</Label>
			<Type>approverRoleOPL</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>useOnPageLoad</Name>
			<Label>On Page Load</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>processSelectionOPL</Name>
			<Label>Process Selection</Label>
			<Type>processSelectionOPL</Type>
			<Special>true</Special>
		</Property>
		
		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>useOnPageSubmit</Name>
			<Label>On Page Submit</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>processSelectionOPS</Name>
			<Label>Process Selection</Label>
			<Type>processSelectionOPS</Type>
			<Special>true</Special>
		</Property>

		<Property>
			<Type>separator</Type>
			<Special>true</Special>
		</Property>
		<Property>
			<Name>useAlternateStage</Name>
			<Label>Alternate Submission Stage</Label>
			<Type>checkbox</Type>
		</Property>
		<Property>
			<Name>processSelectionAltStage</Name>
			<Label>Process Selection</Label>
			<Type>processSelectionAltStage</Type>
			<Special>true</Special>
		</Property>
